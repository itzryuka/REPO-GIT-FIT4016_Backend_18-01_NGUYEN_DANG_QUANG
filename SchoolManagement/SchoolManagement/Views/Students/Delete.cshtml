@model Student
@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.full_name)</dd>
        <dt class="col-sm-2">Student ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.student_id)</dd>
        <dt class="col-sm-2">School</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.school.name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
